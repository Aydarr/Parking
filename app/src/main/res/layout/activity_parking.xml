<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgbike"
    tools:context=".ParkingActivity">
    <TextView

        android:id="@+id/update_text"
        android:layout_width="398dp"
        android:layout_height="61dp"
        android:padding="5dp"
        android:text="Паркуюсь до:"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#212121"
        app:layout_constraintBottom_toTopOf="@+id/mytime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.242" />

    <TimePicker
        android:id="@+id/mytime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/set_alarm"
        android:layout_width="134dp"
        android:layout_height="47dp"
        style="@style/RoundedCornerButton"
        android:padding="5dp"
        android:text="Применить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mytime"
        app:layout_constraintVertical_bias="0.261" />

    <Button
        android:id="@+id/stop_park"
        android:layout_width="133dp"
        android:layout_height="47dp"
        style="@style/RoundedCornerButton"
        android:padding="5dp"
        android:text="Прекратить парковку"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/set_alarm"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mytime"
        app:layout_constraintVertical_bias="0.259" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/update_text"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/update_text"
        app:layout_constraintTop_toBottomOf="@+id/update_text"
        tools:text="ljlk" />
</androidx.constraintlayout.widget.ConstraintLayout>